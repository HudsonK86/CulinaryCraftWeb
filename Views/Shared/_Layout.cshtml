<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CulinaryCraft</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CulinaryCraftWeb.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CulinaryCraft</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                        <li class="nav-item ms-auto">
                            @{
                                var userName = TempData["UserName"] as string;
                                var profileImage = TempData["ProfileImage"] as string ?? "/Images/default-profile.jpg";
                                var userRole = TempData["UserRole"] as string ?? "user";
                            }
                            @if (!string.IsNullOrEmpty(userName))
                            {
                                <div class="dropdown">
                                    <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <img src="@profileImage" alt="Profile" class="rounded-circle" style="width: 40px; height: 40px; object-fit: cover;" />
                                        <span class="ms-2">@userName</span>
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                        @if (userRole == "admin")
                                        {
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageUsers">Manage Users</a></li>
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageRecipes">Manage Recipes</a></li>
                                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="ManageActivities">Manage Activities</a></li>
                                        }
                                        else
                                        {
                                            <li><a class="dropdown-item" asp-controller="User" asp-action="AccountSettings">Account Settings</a></li>
                                            <li><a class="dropdown-item" asp-controller="User" asp-action="MyRecipes">My Recipes</a></li>
                                            <li><a class="dropdown-item" asp-controller="User" asp-action="MyActivities">My Activities</a></li>
                                        }
                                        <li><hr class="dropdown-divider" /></li>
                                        <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                                    </ul>
                                </div>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="alert alert-success text-center mt-4" role="alert">
                        @TempData["SuccessMessage"]
                    </div>
                </div>
            </div>
        }
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - CulinaryCraft - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
