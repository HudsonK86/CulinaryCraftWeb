@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-4 fw-bold">Learn to Cook<br />with Confidence</h1>
            <p class="lead">Master the art of cooking.</p>
        </div>
        <div class="col-md-6">
            <h1>New here?</h1>
            <p>Sign up to get started.</p>
            <a href="#" class="btn btn-primary">Sign up</a>
        </div>
    </div>

    <h2 class="mb-4">Cuisines</h2>
    <div class="row g-4">
        <div class="col-md-4">
            <div class="course-card text-center p-3 h-100">
                <img src="~/Images/Western.png" class="img-fluid rounded mb-3" alt="Western Cuisine" />
                <h5>Western</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="course-card text-center p-3 h-100">
                <img src="~/Images/Chinese.png" class="img-fluid rounded mb-3" alt="Chinese Cuisine" />
                <h5>Chinese</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="course-card text-center p-3 h-100">
                <img src="~/Images/Japanese.png" class="img-fluid rounded mb-3" alt="Japanese Cuisine" />
                <h5>Japanese</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="course-card text-center p-3 h-100">
                <img src="~/Images/Indian.png" class="img-fluid rounded mb-3" alt="Indian Cuisine" />
                <h5>Indian</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="course-card text-center p-3 h-100">
                <img src="~/Images/Vietnamese.png" class="img-fluid rounded mb-3" alt="Vietnamese Cuisine" />
                <h5>Vietnamese</h5>
            </div>
        </div>
        <div class="col-md-4">
            <div class="course-card text-center p-3 h-100">
                <img src="~/Images/MiddleEast.png" class="img-fluid rounded mb-3" alt="Middle Eastern Cuisine" />
                <h5>Middle Eastern</h5>
            </div>
        </div>
    </div>

    <div class="row">
        <h1>Most Popular Recipes</h1>
        <div class="col-md-4">
            <div class="card">
                <img src="~/Images/Vietnamese.png" class="card-img-top" alt="Recipe 1" />
                <div class="card-body">
                    <h5 class="card-title">Vietnamese Pho</h5>
                    <p class="card-text">A traditional Vietnamese soup made with a clear broth, rice noodles, and a variety of vegetables and herbs.</p>
                    <a href="#" class="btn btn-primary">View Recipe</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/Images/ClassicSpaghetti.png" class="card-img-top" alt="Recipe 2" />
                <div class="card-body">
                    <h5 class="card-title">Classic Spaghetti</h5>
                    <p class="card-text">A classic Italian dish made with a tomato-based sauce, spaghetti, and various toppings.</p>
                    <a href="#" class="btn btn-primary">View Recipe</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <img src="~/Images/BeefStirFry.png" class="card-img-top" alt="Recipe 3" />
                <div class="card-body">
                    <h5 class="card-title">Beef Stir Fry</h5>
                    <p class="card-text">A quick and easy stir-fry made with beef, vegetables, and a savory sauce.</p>
                    <a href="#" class="btn btn-primary">View Recipe</a>
                </div>
            </div>
        </div>
        
    </div>
</div>

