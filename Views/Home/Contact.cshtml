@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center">
            <img src="~/Images/Logo.png" class="img-fluid mb-3" alt="Logo" style="max-width: 100px;" />
            <h1 class="display-4 fw-bold mb-3">Contact Us</h1>
            <p class="lead mb-4">
                Have questions, feedback, or suggestions? <br />
                <span class="text-primary">We'd love to hear from you!</span>
            </p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="mb-3 text-primary">Get in Touch</h5>
                    <ul class="list-unstyled mb-3">
                        <li class="mb-2"><i class="bi bi-envelope-fill me-2 text-primary"></i>
                            <strong>Email:</strong> <a href="mailto:support@culinarycraft.com">support@culinarycraft.com</a>
                        </li>
                        <li class="mb-2"><i class="bi bi-telephone-fill me-2 text-primary"></i>
                            <strong>Phone:</strong> +1 (555) 123-4567
                        </li>
                        <li><i class="bi bi-geo-alt-fill me-2 text-primary"></i>
                            <strong>Address:</strong> 123 Culinary Ave, Food City, Country
                        </li>
                    </ul>
                    <p class="text-muted mb-0">We aim to respond to all inquiries within 24 hours.</p>
                </div>
            </div>
        </div>
    </div>
</div>
