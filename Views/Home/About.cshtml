@{
    ViewData["Title"] = "About";
}

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center">
            <img src="~/Images/Logo.png" class="img-fluid mb-3" alt="Logo" style="max-width: 100px;" />
            <h1 class="display-4 fw-bold">About CulinaryCraft</h1>
            <p class="lead mt-3">
                CulinaryCraft is a community-driven platform where food enthusiasts can share, discover, and enjoy recipes from around the world. 
                Whether you are a home cook or a professional chef, our mission is to inspire creativity in the kitchen and connect people through the love of food.
            </p>
            <p>
                <strong>Features:</strong>
                <ul class="list-unstyled">
                    <li>• Share your favorite recipes</li>
                    <li>• Explore cuisines from different cultures</li>
                    <li>• Connect with other food lovers</li>
                </ul>
            </p>
        </div>
    </div>
</div>
