@{
    ViewData["Title"] = "About";
}

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8 text-center">
            <img src="~/Images/Logo.png" class="img-fluid mb-3" alt="Logo" style="max-width: 100px;" />
            <h1 class="display-4 fw-bold mb-3">About CulinaryCraft</h1>
            <p class="lead mb-4">
                CulinaryCraft is a <span class="text-primary fw-semibold">community-driven platform</span> where food enthusiasts can share, discover, and enjoy recipes from around the world.
            </p>
        </div>
    </div>
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h4 class="card-title mb-3 text-primary">Our Mission</h4>
                    <p class="card-text">
                        To inspire creativity in the kitchen and connect people through the love of food, whether you are a home cook or a professional chef.
                    </p>
                    <h5 class="mt-4 mb-2 text-primary">Features</h5>
                    <ul class="list-group list-group-flush mb-3">
                        <li class="list-group-item">Share your favorite recipes</li>
                        <li class="list-group-item">Explore cuisines from different cultures</li>
                        <li class="list-group-item">Connect with other food lovers</li>
                        <li class="list-group-item">Get inspired by trending dishes</li>
                    </ul>
                    <p class="text-muted mb-0">Join us and start your culinary journey today!</p>
                </div>
            </div>
        </div>
    </div>
</div>
