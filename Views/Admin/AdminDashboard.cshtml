@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section SidebarMenu {
    <li class="nav-item">
        <a class="nav-link" href="#" onclick="loadDashboardContent('@Url.Action("ManageUsers", "Admin")'); return false;">Manage Users</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#" onclick="loadDashboardContent('@Url.Action("ManageRecipes", "Admin")'); return false;">Manage Recipes</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#" onclick="loadDashboardContent('@Url.Action("ManageComments", "Admin")'); return false;">Manage Comments</a>
    </li>
    <li class="nav-item mt-3">
        <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>
    </li>
}

<div id="dashboard-content">
    @* Optionally load a default partial, or leave empty *@
</div>

@section Scripts {
    <script>
        function loadDashboardContent(url) {
            $("#dashboard-content").load(url);
        }
    </script>
}