@{
    ViewData["Title"] = "Login";
}

<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-md-6 text-center">
            <img src="~/Images/Logo.png" class="img-fluid mb-3" alt="Logo" style="max-width: 100px;" />
            <h1 class="display-5 fw-bold">Login</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card-style p-4">
                <!-- Display validation errors -->
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <form asp-action="Login" method="post">
                    <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />
                    <div class="form-group mb-3">
                        <label for="UserId" class="form-label">User ID</label>
                        <input type="text" class="form-control" id="userId" name="userId" placeholder="Enter your User ID" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="Password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="Enter your Password" required />
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <a asp-controller="Account" asp-action="ForgotPassword" class="btn btn-link">Forgot Password?</a>
                        <a asp-controller="Account" asp-action="Register" class="btn btn-link">Register</a>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 mb-3">Login</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary w-100">Back</a>
                </form>
            </div>
        </div>
    </div>
</div>